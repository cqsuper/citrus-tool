<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.wst.common.uriresolver.resolverExtensions">
		<resolverExtension priority="high" stage="prenormalization"
			class="com.alibaba.ide.plugin.eclipse.springext.extension.resolver.SpringExtSchemaResolver" />
	</extension>
	<extension point="org.eclipse.ecf.filetransfer.urlStreamHandlerService">
		<urlStreamHandlerService protocol="springext"
			serviceClass="com.alibaba.ide.plugin.eclipse.springext.extension.resolver.SpringExtURLStreamHandler" />
	</extension>
	<extension point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
		<hyperlinkDetector targetId="org.eclipse.core.runtime.xml"
			id="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.XmlElementHyperlinkDetector"
			name="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.XmlElementHyperlinkDetector"
			class="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.XmlElementHyperlinkDetector" />
		<hyperlinkDetector targetId="org.eclipse.ui.DefaultTextEditor"
			id="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.URLHyperlinkDetector"
			name="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.URLHyperlinkDetector"
			class="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.URLHyperlinkDetector" />
		<hyperlinkDetector targetId="org.eclipse.ui.DefaultTextEditor"
			id="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.JavaHyperlinkDetector"
			name="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.JavaHyperlinkDetector"
			class="com.alibaba.ide.plugin.eclipse.springext.extension.hyperlink.detector.JavaHyperlinkDetector" />
	</extension>
	<extension point="org.eclipse.core.contenttype.contentTypes">
		<content-type base-type="org.eclipse.core.runtime.xml" default-charset="UTF-8"
			id="com.alibaba.ide.plugin.eclipse.springext.configFile" name="%configFileContentTypeName" priority="high">
			<describer class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
				<parameter name="element" value="{http://www.springframework.org/schema/beans}beans" />
			</describer>
		</content-type>
		<content-type base-type="org.eclipse.core.runtime.properties" default-charset="UTF-8"
			id="com.alibaba.ide.plugin.eclipse.springext.definitionProperitesFile"
			name="%definitionPropertiesFileContentTypeName" file-names="spring.schemas, spring.configuration-points"
			file-extensions="bean-definition-parsers, bean-definition-decorators, bean-definition-decorators-for-attribute"
			priority="high" />
	</extension>
	<extension point="org.eclipse.ui.editors">
		<editor id="com.alibaba.ide.plugin.eclipse.springext.extension.editor.SpringExtConfigEditor"
			class="com.alibaba.ide.plugin.eclipse.springext.extension.editor.SpringExtConfigEditor"
			contributorClass="com.alibaba.ide.plugin.eclipse.springext.extension.editor.SpringExtConfigEditorContributor"
			default="true" icon="icons/springext.png" name="%configFileEditorName"
			symbolicFontName="org.eclipse.wst.sse.ui.textfont">
			<contentTypeBinding contentTypeId="com.alibaba.ide.plugin.eclipse.springext.configFile" />
		</editor>
	</extension>
	<extension point="org.eclipse.wst.sse.ui.completionProposal">
		<proposalComputer activate="false" categoryId="org.eclipse.wst.xml.ui.proposalCategory.xmlTags"
			class="com.alibaba.ide.plugin.eclipse.springext.extension.completion.SpringExtXMLCompletionProposalComputer"
			id="com.alibaba.ide.plugin.eclipse.springext.extension.completion.SpringExtXMLCompletionProposalComputer">
			<contentType id="org.eclipse.core.runtime.xml" />
		</proposalComputer>
	</extension>
    <extension point="org.eclipse.ui.newWizards">
      <category
            id="com.alibaba.eclipse.plugin.springext.extendtool.category"
            name="Springext">
      </category>
      <wizard
            category="com.alibaba.eclipse.plugin.springext.extendtool.category"
            class="com.alibaba.ide.plugin.eclipse.springext.extension.wizards.ConfigurationPointWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            icon="icons/output_folder_attrib.gif"
            id="com.alibaba.eclipse.plugin.springext.extendtool.webx.wizard"
            name="Springext Configuration Point"
            preferredPerspectives="org.eclipse.jdt.ui.JavaPerspective,org.eclipse.jdt.ui.JavaBrowsingPerspective,org.eclipse.jdt.ui.JavaHierarchyPerspective"
            project="true">
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>
	  <wizard
            category="com.alibaba.eclipse.plugin.springext.extendtool.category"
            class="com.alibaba.ide.plugin.eclipse.springext.extension.wizards.ContributionWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            icon="icons/contribution.gif"
            id="com.alibaba.eclipse.plugin.springext.extendtool.webx.wizard"
            name="Springext Contribution"
            preferredPerspectives="org.eclipse.jdt.ui.JavaPerspective,org.eclipse.jdt.ui.JavaBrowsingPerspective,org.eclipse.jdt.ui.JavaHierarchyPerspective"
            project="true">
         <selection
               class="org.eclipse.core.resources.IResource">
         </selection>
      </wizard>      
        
   </extension>	
</plugin>
